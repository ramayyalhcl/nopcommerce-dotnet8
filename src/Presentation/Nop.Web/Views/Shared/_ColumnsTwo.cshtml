@{
    Layout = "~/Views/Shared/_Root.cshtml";
}
@{
    // .NET 8.0: Use ViewContext.RouteData instead of Url.RequestContext.RouteData
    //current category ID
    int currentCategoryId = 0;
    if (ViewContext.RouteData.Values["controller"]?.ToString()?.Equals("catalog", StringComparison.InvariantCultureIgnoreCase) == true &&
        ViewContext.RouteData.Values["action"]?.ToString()?.Equals("category", StringComparison.InvariantCultureIgnoreCase) == true &&
        ViewContext.RouteData.Values["categoryId"] != null)
    {
        currentCategoryId = Convert.ToInt32(ViewContext.RouteData.Values["categoryId"].ToString());
    }


    //current manufacturer ID
    int currentManufacturerId = 0;
    if (ViewContext.RouteData.Values["controller"]?.ToString()?.Equals("catalog", StringComparison.InvariantCultureIgnoreCase) == true &&
        ViewContext.RouteData.Values["action"]?.ToString()?.Equals("manufacturer", StringComparison.InvariantCultureIgnoreCase) == true &&
        ViewContext.RouteData.Values["manufacturerId"] != null)
    {
        currentManufacturerId = Convert.ToInt32(ViewContext.RouteData.Values["manufacturerId"].ToString());
    }


    //current product ID
    int currentProductId = 0;
    if (ViewContext.RouteData.Values["controller"]?.ToString()?.Equals("product", StringComparison.InvariantCultureIgnoreCase) == true &&
        ViewContext.RouteData.Values["action"]?.ToString()?.Equals("productdetails", StringComparison.InvariantCultureIgnoreCase) == true &&
        ViewContext.RouteData.Values["productId"] != null)
    {
        currentProductId = Convert.ToInt32(ViewContext.RouteData.Values["productId"].ToString());
    }
}
@if (IsSectionDefined("Breadcrumb"))
{
    @section Breadcrumb {
        @RenderSection("Breadcrumb")
    } 
}
<div class="side-2">
    @if (IsSectionDefined("left"))
    {
        @RenderSection("left")
    }
    else
    {
        @Html.Widget("left_side_column_before")
        @Html.Action("CategoryNavigation", "Catalog", new { currentCategoryId = currentCategoryId, currentProductId = currentProductId })
        @Html.Widget("left_side_column_after_category_navigation")
        @Html.Action("ManufacturerNavigation", "Catalog", new { currentManufacturerId = currentManufacturerId })
        @Html.Action("VendorNavigation", "Catalog")
        @Html.Action("RecentlyViewedProductsBlock", "Product", new { productThumbPictureSize = 64 })
        @Html.Action("PopularProductTags", "Catalog")
        @Html.Action("PollBlock", "Poll", new { systemKeyword = "LeftColumnPoll" })
        @Html.Widget("left_side_column_after")
    }
</div>
<div class="center-2">
    @Html.Widget("main_column_before")
    @RenderBody()
    @Html.Widget("main_column_after")
</div>
